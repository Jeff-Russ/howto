<%provide(:topic, "Rails ") %>
<%provide(:page, "Initial Setup") %>

<% content_for :toc_btn do %>
<button type='button' data-toggle='modal' 
		class="btn navbar-btn navbar-rbtn" data-target='#modal-toc'>
	<span class='caret'></span>
</button>
<% end %>
<% content_for :toc do %>
<!--<div class="container">-->
	<div class="modal custom nav-spacer " id="modal-toc" tabindex='-1' role='dialog'>
		<div class="modal-dialog">
			<div class="modal-content">
				<div class="modal-header jr-dark-body">
					<button type="button" class="close jr-dark-body" data-dismiss='modal'>
						&times;
					</button><br>
				</div>
				<div class="modal-body">
					<div class="jr-dark-body">
						<div class="row text-center">
							<h3>Table Of Contents</h3>
						</div>
						   <%= @toc %> 
						</div><br>
						<div class="modal-footer"></div>
					</div>
					
				</div>
			</div>
		</div>
	<!--</div>-->
<% end %>

<div class="row">
	<div class="col-xs-10 col-xs-11 col-xs-offset-1">
      

      <%= @html %> 
   </div>   

</div>   
